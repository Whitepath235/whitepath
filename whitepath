  <script>
    // Mobile nav toggle
    const nav = document.getElementById("nav");
    const navToggle = document.getElementById("navToggle");
    navToggle.addEventListener("click", () => {
      nav.classList.toggle("open");
    });

    // Simple contact form handler (frontâ€‘end only)
    const form = document.getElementById("contact-form");
    const statusEl = document.getElementById("formStatus");

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      statusEl.textContent = "";
      statusEl.className = "form-status";

      const name = form.name.value.trim();
      const email = form.email.value.trim();

      if (!name || !email) {
        statusEl.textContent = "Please fill in at least your name and email.";
        statusEl.classList.add("error");
        return;
      }

      // Here you would normally send the data to your backend with fetch()
      // For now, we just show a success message.
      form.reset();
      statusEl.textContent = "Thank you! Weâ€™ve received your request and will contact you soon.";
      statusEl.classList.add("success");
    });
  </script>
